{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WorkPlan",
  "version": "0.2.5",
  "identifier": "com.makotoarai.workplan",
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "WorkPlan with AI",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 650,
        "resizable": true,
        "center": true,
        "decorations": true,
        "transparent": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "minSdkVersion": 24
    },
    "iOS": {
      "developmentTeam": ""
    },
    "windows": {
      "wix": null,
      "nsis": {
        "displayLanguageSelector": true
      }
    }
  }
}